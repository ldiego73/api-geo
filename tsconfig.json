{
  "compilerOptions": {
    "lib": ["ES2019"],
    "module": "CommonJS",
    "target": "ES2019",

    "esModuleInterop": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,

    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@core/*": ["core/*"]
    },

    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist", "docs", "infra"]
}
